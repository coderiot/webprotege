<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.ui.library.text">
    <ui:style>
        .instructions {
            max-width: 450px;
            padding-bottom: 20px;
        }
        .emailAddressField {
            width: 100%;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:Label text="Please enter your email address.  Your password will be reset to a new password that will be emailed to you." addStyleNames="{style.instructions}"/>
        <text:PlaceholderTextBox ui:field="emailAddressField" placeholder="Enter email address" addStyleNames="{style.emailAddressField}"/>
    </g:HTMLPanel>
</ui:UiBinder>
